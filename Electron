function verificarMaiorIdade(idade) {
    
    return idade >= 18 ? 'Maior de idade' : 'Menor de idade';
}

function orderArray() {
    let arr = Array.from({length: 10}, (_, index) => index);
    return arr;
}

function meusDados() {
    let pessoa = {
        nome: 'John Doe',
        idade: '30',
        cidade: 'Nova York'
    };

    pessoa.nome = 'Jane Doe';
    pessoa.cidade = 'Los Angeles'; 
    delete pessoa.idade; 

    return pessoa;
}

function manipulaArray() {
    let animais = ['cacohrro', 'gato', 'abelha', 'rato', 'le√£o', 'galinha'];

    function ordemAlfabetica() {
        return animais.slice().sort();
    }

    function primeiro() {
        return animais[0];
    }

    function ultimo() {
        return animais[animais.length - 1];
    }

    function tamanhoDaLista() {
        return animais.length;
    }

    return {
        ordemAlfabetica: ordemAlfabetica(),
        primeiro: primeiro(),
        ultimo: ultimo(),
        tamanhoDaLista: tamanhoDaLista()
    };
}
